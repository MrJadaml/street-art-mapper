.col-md-12
  .row
    .col-md-9.text-center
      = image_tag @mural.image
    .scrollable
      .col-md-12
        .col-md-6.tube-sm
          %h1= link_to @user.first_name, user_path(@user)
        .row
          .col-md-12
            .show-map
            %br
            = link_to image_tag('https://s3.amazonaws.com/streetheart/twitter_icon.jpg'), 'http://www.twitter.com/' + @user.twitter, :target => '_blank' if @user.twitter?
            = link_to image_tag('https://s3.amazonaws.com/streetheart/instagram_icon.jpg'), 'http://www.instagram.com/' + @user.instagram, :target => '_blank' if @user.instagram?
            %br
            - if @mural.buffed?
              = "This piece has this been buffed"
            %br
            - if current_user.nil?
            - elsif @mural.user_id == current_user.id || current_user.admin?
              = link_to 'Edit', edit_mural_path, class: 'btn btn-primary'

- content_for(:js) do
  :javascript
    $(function() {
      MapFunctions.showMap('#{mural_path(@mural, format: :json)}');
    });
