.container
  %h1.text-center Streets Gallery
  #map
  .gallery
    %ul#muralGallery
      -@murals.each do |mural|
        %li.col-lg-3.text-center
          = link_to mural do
            = image_tag mural.image.url(:thumb)
.container
  - if current_user
    .btn.btn-info
      = link_to 'New Mural', new_mural_path
