%section
  .container-fluid
    .row
      .col-md-12
        .flagged_page
          .row
            - @images.each do |image|
              .col-md-4.gallery-mural
                = image_tag image.source.url(:user_ablum)
                %br
                .flag-buttons
                  = link_to 'Unflag', unflag_path(image.id), class: 'btn btn-warning', data: {confirm: "Are you sure you want to PUBLISH this image?"}, method: :patch, action: :unflag
                  = link_to 'Delete', image, class: 'btn btn-danger', data: {confirm: "Are you sure you want to DELETE this image?"}, method: :delete
                  %hr
