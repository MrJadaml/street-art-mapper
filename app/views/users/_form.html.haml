= form_for @user, html: {class: 'form-horizontal'} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field.form-group.col-md-offset-1
    = f.label :first_name, class: "col-md-1"
    = f.text_field :first_name, class: "col-md-3"

  .field.form-group.col-md-offset-1
    = f.label :last_name, class: "col-md-1"
    = f.text_field :last_name, class: "col-md-3"

  .field.form-group.col-md-offset-1
    =f.label :email, class:
    =f.email_field :email, class: "col-md-3"

  .actions.form-group.col-md-offset-1
    = f.submit class: "btn btn-primary col-md-offset-1"
