= form_for @user, html: {class: 'form-horizontal'} do |f|
  - if @user.errors.any?
    .alert.alert-danger
      - @user.errors.full_messages.each do |message|
        .text-center.no-decoration= message

  .form-group.col-md-offset-1
    = image_tag(@user.avatar_url) if @user.avatar?
    = f.label :avatar, class: "col-md-1"
    = f.file_field :avatar, class: "btn col-md-3"
    = f.hidden_field :avatar_cache

  .form-group.col-md-offset-1
    = f.label :first_name, 'Name', class: "col-md-1"
    .col-md-3
      = f.text_field :first_name, class: "form-control"

  .form-group.col-md-offset-1
    = f.label :email, class: "col-md-1"
    .col-md-3
      = f.email_field :email, class: "form-control"

  .form-group
    .col-md-2.col-md-offset-1
      = f.check_box :artist, {checked: true}
      = f.label :artist

  .actions
    = f.submit 'Add Artist', class: "btn btn-primary col-md-offset-1"
