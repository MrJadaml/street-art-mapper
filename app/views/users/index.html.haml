%br
.container
  %h1 Artist Profiles
  - @users.each do |user|
    .panel.panel-default.col-lg-3
      .text-center
        = link_to user do
          = image_tag user.avatar.url(:thumb)
        = link_to user.first_name, user_path(user)
        = link_to edit_user_path(user) do
          %span.glyphicon.glyphicon-pencil
        = link_to user_path(user), method: :delete do
          %span.glyphicon.glyphicon-trash
.container
  .btn.btn-info
    = link_to 'New Artist', new_user_path
