.container
  %h1.col-md-11 Users
  %table.table
    %thead
      %tr
        %th.col-md-1
          = link_to 'Name', '#sort'
        %th.col-md-5
          = link_to 'Email', '#sort'
  %tbody
  - @users.each do |user|
    .col-md-12.panel
    %tr
      %td
        .col-md-2= link_to user.first_name, user_path(user)
      %td
        .col-md-9= mail_to user.email
      %td
        .col-md-1
          = link_to 'Edit', edit_user_path(user), class: 'btn btn-warning'
%br/
